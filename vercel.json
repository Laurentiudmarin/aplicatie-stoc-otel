{
  "version": 2,
  "builds": [
    {
      "src": "/public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server.js" },
    { "src": "/download", "dest": "server.js" },
    { "src": "/download-pdf", "dest": "server.js" },
    { "src": "/process", "dest": "server.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}